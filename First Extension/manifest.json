{
    "manifest_version": 3,
    "name": "Impulse Stopper",
    "version": "1.0.0",
    "description": "This extension tracks your overall spending",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    
    "action":{
        "default_action": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions":[
        "storage",
        "tabs"
    ],

    "options_page": "options.html"
}